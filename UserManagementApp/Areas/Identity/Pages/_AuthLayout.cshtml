@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="d-flex aligns-items-center justify-content-center card text-center w-40 position-absolute top-50 start-50 translate-middle">
    <div class="card login-logout-tab">
            <div class="card-header bg-transparent">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item w-50 text-center">
                        <a class="nav-link" href="/Identity/Account/Login">Sign In</a>
                    </li>
                    <li class="nav-item w-50 text-center">
                        <a class="nav-link" href="/Identity/Account/Register">Sign Up</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

</div>



@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        });
    </script>
}
